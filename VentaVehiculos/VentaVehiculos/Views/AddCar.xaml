<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VentaVehiculos.Views.AddCar">
    <ContentPage.Content>
        <StackLayout>
            <Frame HeightRequest="200" WidthRequest="200" HorizontalOptions="Center">
                <Image HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" x:Name="img"/>
            </Frame>

            <Entry Placeholder="Modelo" x:Name="txtmodelo" Keyboard="Default" />
            <Entry Placeholder="Marca" x:Name="txtMarca" Keyboard="Default" />
            <Entry Placeholder="Año" x:Name="txtAnio" Keyboard="Numeric" />
            <Entry Placeholder="Descripcion" x:Name="txtDescripcion" Keyboard="Chat" />
            <Entry Placeholder="Precio" x:Name="txtPrecio" Keyboard="Numeric" />

            <Button Text="Agregar" x:Name="btnAgregar" Clicked="btnAgregar_Clicked"/>
            <Button Text="Tomar Foto" x:Name="btnFoto" Clicked="btnFoto_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    
    
    